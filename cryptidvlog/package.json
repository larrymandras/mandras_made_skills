    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  },
  "husky": {
    "hooks": { "pre-commit": "lint-staged && npm run test:unit" }
  },
  "lint-staged": {
    "*.ts": ["eslint --fix", "tsc --noEmit"]
