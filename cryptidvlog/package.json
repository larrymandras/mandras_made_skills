    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@supabase/supabase-js": "^2.46.0",
    "better-sqlite3": "^9.4.3",
    "elevenlabs": "^1.0.0",
    "openai": "^4.69.0",
    "node-fetch": "^3.3.2",
    "fluent-ffmpeg": "^2.1.3",
    "sharp": "^0.33.5",
    "form-data": "^4.0.1",
